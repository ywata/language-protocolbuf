category:            Language
build-type:          Simple

library
  exposed-modules:     Language.ProtocolBuffers.Types
                     , Language.ProtocolBuffers.PrimTypes
                     , Language.ProtocolBuffers.Parser
                     , Language.ProtocolBuffers.ParserHelper
                     , Language.ProtocolBuffers.PrettyPrint
                     , Language.ProtocolBuffers

  -- other-extensions:
  build-depends:       base >=4.12 && <5
                     , hspec >= 2.7.0
                     , megaparsec >= 8.0.0
                     , neat-interpolation >= 0.5.1.2
                     , optparse-declarative >= 0.4.0
                     , pretty >= 1.1.3.0
                     , text >= 1.2.0.0

  hs-source-dirs:      src
  default-language:    Haskell2010

executable parse-proto
  main-is: Main.hs
  hs-source-dirs:
      app
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
                  language-protocolbuf
                , base >=4.7 && <5
                , megaparsec >= 8.0.0
                , neat-interpolation >= 0.5.1.2
                , optparse-declarative >= 0.4.0
                , pretty >= 1.1.3.0
                , text >= 1.2.4.0
  default-language: Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs:
      test
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
                    base >=4.7 && <5
                , hspec >= 2.7.0
                , hspec-megaparsec >= 2.0.0
                , language-protocolbuf
                , megaparsec >= 8.0.0
                , neat-interpolation >= 0.5.0.0
                , optparse-declarative >= 0.4.0
                , pretty >= 1.1.3.0
                , text >= 1.2.0.0
                , QuickCheck >= 2.14.0
  build-tool-depends: hspec-discover:hspec-discover == 2.*
  default-language: Haskell2010
  other-modules:
        Language.ProtocolBuffersSpec
        , Language.ProtocolBuffers.ParserHelperSpec
        , Language.ProtocolBuffers.ParserSpec
        , Language.ProtocolBuffers.PrettyPrintSpec
